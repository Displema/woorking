<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Gestione Prenotazioni</title>
    <link href="https://cdn.jsdelivr.net/npm/@tabler/core@latest/dist/css/tabler.min.css" rel="stylesheet" />
    <link href="/static/css/reservation_details.css" rel="stylesheet" />
</head>

<body>
<div class="page">
    <!-- Sidebar -->
    {% include "base/sidebar.html.twig" %}

    <div class="page-wrapper">
        <!-- Navbar top -->
        <header class="navbar navbar-expand-md navbar-light bg-white shadow-sm">
            <div class="container-xl d-flex justify-content-between align-items-center">
                <a href="#" class="navbar-brand">Gestione Prenotazioni</a>
            </div>
        </header>

        <!-- Page body -->
        <div class="page-body container py-4">
            <!-- Tabs per Prenotazioni Attive / Passate -->
            <div class="mb-4">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link active" href="#" id="tabAttiveBtn">
                            Prenotazioni Attive
                            <span class="badge bg-primary ms-1" id="countAttive">{{ prenotazioniAttive|length }}</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="tabPassateBtn">
                            Prenotazioni Passate
                            <span class="badge bg-secondary ms-1" id="countPassate">{{ prenotazioniPassate|length }}</span>
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Contenuto -->
            <div id="tabAttive" class="tab-content active">
                <div class="list-group">
                    {% for prenotazione in prenotazioniAttive %}
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">{{ prenotazione.ufficio.titolo }}</h5>
                                <p class="card-description">{{ prenotazione.ufficio.descrizione|length > 100 ? prenotazione.ufficio.descrizione|slice(0, 100) ~ '...' : prenotazione.ufficio.descrizione }}</p>
                                <div class="card-footer d-flex justify-content-between flex-wrap">
                                    <span><strong>Cliente:</strong> {{ prenotazione.utente.name }} {{ prenotazione.utente.surname }}</span>
                                    <span><strong>Data:</strong> {{ prenotazione.data|date('d/m/Y') }}</span>
                                    <span><strong>Telefono:</strong> {{ prenotazione.utente.phone }}</span>
                                    <span><strong>Email:</strong> {{ prenotazione.utente.email }}</span>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <p class="text-muted">Nessuna prenotazione attiva.</p>
                    {% endfor %}
                </div>
            </div>

            <div id="tabPassate" class="tab-content d-none">
                <div class="list-group">
                    {% for prenotazione in prenotazioniPassate %}
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">{{ prenotazione.ufficio.titolo }}</h5>
                                <p class="card-description">{{ prenotazione.ufficio.descrizione|length > 100 ? prenotazione.ufficio.descrizione|slice(0, 100) ~ '...' : prenotazione.ufficio.descrizione }}</p>
                                <div class="card-footer d-flex justify-content-between flex-wrap">
                                    <span><strong>Cliente:</strong> {{ prenotazione.utente.name }} {{ prenotazione.utente.surname }}</span>
                                    <span><strong>Data:</strong> {{ prenotazione.data|date('d/m/Y') }}</span>
                                    <span><strong>Telefono:</strong> {{ prenotazione.utente.phone }}</span>
                                    <span><strong>Email:</strong> {{ prenotazione.utente.email }}</span>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <p class="text-muted">Nessuna prenotazione passata.</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@tabler/core@latest/dist/js/tabler.min.js"></script>
<script>
    // Gestione tabs semplice
    const tabAttiveBtn = document.getElementById('tabAttiveBtn');
    const tabPassateBtn = document.getElementById('tabPassateBtn');
    const tabAttive = document.getElementById('tabAttive');
    const tabPassate = document.getElementById('tabPassate');

    tabAttiveBtn.addEventListener('click', (e) => {
        e.preventDefault();
        tabAttiveBtn.classList.add('active');
        tabPassateBtn.classList.remove('active');
        tabAttive.classList.add('active');
        tabAttive.classList.remove('d-none');
        tabPassate.classList.remove('active');
        tabPassate.classList.add('d-none');
    });

    tabPassateBtn.addEventListener('click', (e) => {
        e.preventDefault();
        tabPassateBtn.classList.add('active');
        tabAttiveBtn.classList.remove('active');
        tabPassate.classList.add('active');
        tabPassate.classList.remove('d-none');
        tabAttive.classList.remove('active');
        tabAttive.classList.add('d-none');
    });
</script>

</body>
</html>
