<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Gestione Segnalazioni</title>
    <link href="https://cdn.jsdelivr.net/npm/@tabler/core@latest/dist/css/tabler.min.css" rel="stylesheet" />
    <link href="/static/css/reports.css" rel="stylesheet">
</head>

<body>
<div class="page">
    <!-- Sidebar -->
    {% include "base/sidebar.html.twig" %}

    <div class="page-wrapper">
        <!-- Navbar top -->
        <header class="navbar navbar-expand-md navbar-light bg-white shadow-sm">
            <div class="container-xl d-flex justify-content-between align-items-center">
                <a href="#" class="navbar-brand">Gestione Segnalazioni</a>
            </div>
        </header>

        <!-- Page body -->
        <div class="page-body container py-4">
            <!-- Tabs per Attive / Chiuse -->
            <div class="mb-4">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link active" href="#" id="tabAttiveBtn">Attive <span
                                    class="badge bg-primary ms-1" id="countAttive">3</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="tabChiuseBtn">Chiuse <span class="badge bg-secondary ms-1"
                                                                                    id="countChiuse">5</span></a>
                    </li>
                </ul>
            </div>

            <!-- Contenuto -->
            <div id="tabAttive" class="tab-content active">
                <div class="list-group">
                    {% for report in activeReports %}
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">{{ report.commento|slice(0, 30) }}</h5>
                            <p class="card-description">{{ report.commento }}</p>
                            <div class="card-footer">
                                <span>Segnalato da: {{ report.user.name }} {{ report.user.surname }}</span>
                                <span>Ufficio: {{ report.ufficio.titolo }}</span>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <div id="tabChiuse" class="tab-content d-none">
                <div class="list-group">
                    {% for report in closedReports %}
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">{{ report.commento|slice(0,30) }}</h5>
                            <p class="card-description">{{ report.commento }}</p>
                            <div class="card-footer">
                                <span>Segnalato da: {{ report.user.name }} {{ report.user.surname }}</span>
                                <span>Ufficio: {{ report.ufficio.titolo }}</span>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@tabler/core@latest/dist/js/tabler.min.js"></script>
<script src="/static/js/handle_reports_tabs.js"></script>
</body>

</html>
