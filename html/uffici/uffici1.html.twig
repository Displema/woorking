<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <title>Risultati ricerca uffici</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/html/uffici/uffici.css">
</head>



<!-- NAVBAR -->
{% if isloggedin == 'isLoggedIn' %}

    {% include 'navbar/navbar.html.twig' %}

{% else %}

    {% include 'navbar/navbar1.html.twig' %}

{%  endif %}

<!-- RISULTATI -->
<div class="container-fluid text-center py-5 bg-black text-white">
    <h1>Risultati della ricerca</h1>
</div>

<div class="container py-5 ufficio-container">
    {% for office in offices %}
    <div class="row g-4">
        <!-- Card 1 -->
        <div class="col-12">
            <div class="ufficio-card d-flex flex-column flex-md-row mx-auto">
                <img src="{{ office.photo }}" alt="Ufficio" class="ufficio-img">
                <div class="ufficio-info">
                    <a href="/search/showoffice/detailsoffice/{{ office.office.id }}/{{ date }}/{{ fascia }}"" class="btn-prenota"><i class="fa-solid fa-calendar-check"></i> Prenota</a>
                    <h2>{{office.office.titolo}}</h2>
                    <p><strong>Indirizzo:</strong> {{ office.office.indirizzo }}</p>
                    <p><strong>Posti disponibili:</strong> {{ office.office.numeroPostazioni }}</p>
                    <div class="prezzo">{{ office.office.prezzo  }} euro al mese</div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
        <!-- Card 2 -->

<!-- FOOTER -->
        {% include 'Footer/footer.html.twig' %}

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    fetch("/Nuovohtml/footer/footer.html")
        .then(response => response.text())
        .then(data => {
            document.getElementById("footer-placeholder").innerHTML = data;
        });
</script>
<script>
    fetch("/Nuovohtml/navbar/navbar1.html")
        .then(response => response.text())
        .then(data => {
            document.getElementById("navbar-placeholder").innerHTML = data;
        });
</script>
</body>
</html>
